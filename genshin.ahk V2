#Persistent
toggle := false

F1::
toggle := !toggle
if (toggle)
{
    SetTimer, PressSpaceAndClick, 500
}
else
{
    SetTimer, PressSpaceAndClick, Off
}
return

PressSpaceAndClick:
    ; Space tuşunu GenshinImpact.exe'ye gönder
    ControlSend,, {Space}, ahk_exe GenshinImpact.exe
    ; X=1570, Y=780 koordinatlarında GenshinImpact.exe'ye sol tıklama gönder
    ControlClick, x1570 y780, ahk_exe GenshinImpact.exe
return
